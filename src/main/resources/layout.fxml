<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="simulator.Controller" styleClass="layout" fx:id="root">
    <stylesheets>
        <URL value="@Styles.css"/>
    </stylesheets>
    <center>
        <StackPane fx:id="canvasPane" styleClass="centerLayout"/>
    </center>
    <top>
        <HBox styleClass="topLayout">
            <Text text="Hello"/>
        </HBox>
    </top>
    <right>
        <VBox styleClass="rightLayout">
            <StackPane>
                <GridPane fx:id="elementInfo">
                    <Label text="Device info" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label text="Device type: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="elementInfoDeviceType" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    <Label text="MAC address: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <Label fx:id="elementInfoMacAddress" GridPane.rowIndex="2" GridPane.columnIndex="1" onMouseClicked="#handleElementInfoMacAddressClick"/>
                    <Button onAction="#handleConnectElementsButtonClick" text="Connect" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <Button onAction="#handleRemoveElementButtonClick" text="Remove" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                </GridPane>
            </StackPane>
            <VBox fx:id="connectionsInfo"/>
            <VBox>
                <GridPane>
                    <Label text="Source MAC: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="simulationSourceMac" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    <Label text="Destination MAC: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="simulationDestinationMac" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>
                <Button text="Simulate" onAction="#handleStartSimulationButtonClick" />
                <Button text="Stop simulation" onAction="#handleStopSimulationButtonClick" />
            </VBox>
        </VBox>
    </right>
    <bottom>
        <HBox styleClass="bottomLayout">
            <Button onAction="#handleEndDeviceButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@endDevice.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#handleHubButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@hub.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#handleSwitchButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@switch.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#handleRouterButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@router.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#handleFirewallButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@firewall.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </bottom>
</BorderPane>