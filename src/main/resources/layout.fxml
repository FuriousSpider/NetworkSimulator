<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="simulator.Controller" styleClass="layout" fx:id="root">
    <stylesheets>
        <URL value="@Styles.css"/>
    </stylesheets>
    <center>
        <StackPane fx:id="canvasPane"/>
    </center>
    <top>
        <HBox styleClass="topLayout">
            <Text text="Hello"/>
        </HBox>
    </top>
    <right>
        <StackPane styleClass="rightLayout">
            <GridPane fx:id="elementInfo">
                <Label text="Device info" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label text="Device type: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label fx:id="elementInfoDeviceType" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Button onAction="#handleConnectElementsButtonClick" text="Connect" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Button onAction="#handleRemoveElementButtonClick" text="Remove" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            </GridPane>
        </StackPane>
    </right>
    <bottom>
        <HBox styleClass="bottomLayout">
            <Button onAction="#handleEndDeviceButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@endDevice.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#handleHubButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@hub.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#handleSwitchButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@switch.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#handleRouterButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@router.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#handleFirewallButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@firewall.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </bottom>
</BorderPane>