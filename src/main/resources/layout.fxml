<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<?import simulator.view.EditableLabel?>
<?import simulator.view.LogPanel?>
<?import simulator.view.TitleLabel?>
<?import simulator.view.IPTextField?>
<?import simulator.view.RoutingTable?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="simulator.Controller" styleClass="layout" fx:id="root">
    <stylesheets>
        <URL value="@Styles.css"/>
    </stylesheets>
    <center>
        <StackPane fx:id="canvasPane" styleClass="centerLayout"/>
    </center>
    <top>
        <HBox styleClass="topLayout">
            <Text text="Hello"/>
        </HBox>
    </top>
    <right>
        <VBox styleClass="rightLayout">
            <StackPane>
                <VBox fx:id="elementInfo">
                    <Label text="Device info"/>
                    <TitleLabel fx:id="elementInfoDeviceType" title="Device type: "/>
                    <EditableLabel fx:id="elementInfoDeviceName" title="Device name: " defaultValue="Why are you running?"/>
                    <Label text="MAC address: "/>
                    <Label fx:id="elementInfoMacAddress" onMouseClicked="#handleElementInfoMacAddressClick"/>
                    <IPTextField fx:id="elementInfoIpAddress"/>
                    <Button onAction="#handleConnectElementsButtonClick" text="Connect"/>
                    <Button onAction="#handleRemoveElementButtonClick" text="Remove"/>
                </VBox>
            </StackPane>
            <VBox fx:id="connectionsInfo"/>
            <VBox>
                <GridPane>
                    <Label text="Simulation" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label text="Source IP Address: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="simulationSourceIPAddress" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    <Label text="Destination IP Address: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="simulationDestinationIPAddress" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                </GridPane>
                <Button text="Simulate" onAction="#handleStartSimulationButtonClick"/>
                <Button text="Stop simulation" onAction="#handleStopSimulationButtonClick"/>
            </VBox>
            <RoutingTable fx:id="routingTableView"/>
            <Region VBox.vgrow="ALWAYS"/>
            <LogPanel fx:id="logPanel" prefHeight="150"/>
        </VBox>
    </right>
    <bottom>
        <HBox styleClass="bottomLayout">
            <Button onAction="#handleEndDeviceButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@endDevice.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#handleHubButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@hub.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#handleSwitchButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@switch.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#handleRouterButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@router.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#handleFirewallButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@firewall.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </bottom>
</BorderPane>