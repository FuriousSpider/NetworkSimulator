<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="simulator.Controller" styleClass="layout">
    <stylesheets>
        <URL value="@Styles.css"/>
    </stylesheets>
    <center>
        <StackPane fx:id="canvasPane"/>
    </center>
    <top>
        <HBox styleClass="topLayout">
            <Text text="Hello"/>
        </HBox>
    </top>
    <right>
        <VBox styleClass="rightLayout">

        </VBox>
    </right>
    <bottom>
        <HBox styleClass="bottomLayout">
            <Button onAction="#handleEndDeviceButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@endDevice.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#handleHubButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@hub.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#handleSwitchButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@switch.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#handleRouterButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@router.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#handleFirewallButtonClick">
                <graphic>
                    <ImageView>
                        <Image url="@firewall.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </bottom>
</BorderPane>